<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="brand" href="/">Socialcontrol</a>
			<div class="nav-collapse collapse">
				<ul class="nav">
				  <li class="active"><a href="group">Groups</a></li>
				  <li><a href="members">Members</a></li>
				</ul>
			</div><!--/.nav-collapse -->
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="pull-right" style="margin-top: 20px">
		<a href="#newModal" class="btn btn-info" role="button" data-toggle="modal"><i class="icon-plus-sign"></i> Add Group</a>
	</div>
	
	<h1 class="lobster azure">Groups</h1>
	
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th class="span1">#</th>
				<th class="span2">Name</th>
				<th class="span8">Members</th>
			</tr>
		</thead>
		<tbody>
			{{#groups}}
			<tr>
				<td>
					{{shortCode}}
				</td>
				<td>{{name}}</td>
				<td>
					<strong>{{memberCount}}</strong>: 
					{{#members}}
					<a href="https://twitter.com/{{screen_name}}">{{name}} (@{{screen_name}})</a>
					{{/members}}
					{{^members}}
					No group members found.
					{{/members}}
					<div class="pull-right">
						<a href="#editModal" class="editGroup" role="button" data-toggle="modal" data-shortcode="{{shortCode}}" data-name="{{name}}" data-url="{{url}}" data-twitter="{{twitter}}"><i class="icon-pencil"></i></a>
						<a href="#deleteModal" class="deleteGroup" role="button" data-toggle="modal" data-shortcode="{{shortCode}}" data-name="{{name}}"><i class="icon-remove"></i></a>
					</div>
				</td>
			</tr>
			{{/groups}}
			{{^groups}}
			
			{{/groups}}
		</tbody>
	</table>
</div> <!-- /container -->

<div id="newModal" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>Add a new group</h3>
	</div>
	<div class="modal-body">
		<p>
			<form class="form-horizontal">
				<div class="control-group">
					<label class="control-label">Name &nbsp;</label>
					<div class="controls">
						<input type="text" class="txtGroupName input-xlarge" placeholder="Group name">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">Twitter &nbsp;</label>
					<div class="controls">
						<div class="input-prepend">
							<span class="add-on">@</span>
							<input class="txtGroupTwitter input-xlarge" type="text" placeholder="Group">
						</div>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">URL &nbsp;</label>
					<div class="controls">
						<input type="text" class="txtGroupURL input-xlarge" placeholder="Group URL">
					</div>
				</div>
			</form>
		</p>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</a>
		<a href="#" id="btnAddGroup" class="btn btn-info">Add Group</a>
	</div>
</div>

<div id="editModal" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>Edit group</h3>
	</div>
	<div class="modal-body">
		<p>
			<form class="form-horizontal">
				<div class="control-group">
					<label class="control-label">Name &nbsp;</label>
					<div class="controls">
						<input type="text" class="txtGroupName input-xlarge" placeholder="Group name">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">URL &nbsp;</label>
					<div class="controls">
						<input type="text" class="txtGroupURL input-xlarge" placeholder="Group URL">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">Twitter &nbsp;</label>
					<div class="controls">
						<div class="input-prepend">
							<span class="add-on">@</span>
							<input class="txtGroupTwitter input-xlarge" type="text" placeholder="Group">
						</div>
					</div>
				</div>
				<input type="hidden" class="txtGroupShortCode" />
			</form>
		</p>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</a>
		<a href="#" id="btnEditGroup" class="btn btn-info">Update</a>
	</div>
</div>

<div id="deleteModal" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3>Delete group?</h3>
	</div>
	<div class="modal-body">
		<p>
			Are you sure you want to delete <strong id="deleteGroupName"></strong>?
		</p>
	</div>
	<div class="modal-footer">
		<input type="hidden" class="txtGroupShortCode" />
		<a href="#" class="btn" data-dismiss="modal" aria-hidden="true">No</a>
		<a href="#" id="btnDeleteGroup" class="btn btn-danger">Yes, delete it!</a>
	</div>
</div>